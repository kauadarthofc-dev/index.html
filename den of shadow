<script>
const canvas = document.getElementById('gameCanvas');
const ctx = canvas.getContext('2d');

let audioCtx;
let bufferInimigo, bufferFilha;

async function initAudio() {
    if (!audioCtx) {
        audioCtx = new (window.AudioContext || window.webkitAudioContext)();
        try {
            const [r1, r2] = await Promise.all([
                fetch('cry-of-pain-357978.mp3'),
                fetch('creepy-woman-cry-407580.mp3')
            ]);
            bufferInimigo = await audioCtx.decodeAudioData(await r1.arrayBuffer());
            bufferFilha = await audioCtx.decodeAudioData(await r2.arrayBuffer());
        } catch(e) { console.warn("Ãudio nÃ£o carregado."); }
    }
    if (audioCtx.state === 'suspended') audioCtx.resume();
}

function playScream(isBoss, isDaughter) {
    if (!audioCtx || !bufferInimigo) return;
    const source = audioCtx.createBufferSource();
    const gain = audioCtx.createGain();
    source.buffer = (isDaughter && bufferFilha) ? bufferFilha : bufferInimigo;
    source.playbackRate.value = isBoss ? 0.6 : 0.9 + Math.random() * 0.4;
    gain.gain.setValueAtTime(isBoss ? 0.4 : 0.2, audioCtx.currentTime);
    source.connect(gain); gain.connect(audioCtx.destination);
    source.start(0);
}

const ROOM = { w: 1600, h: 1000, wall: 80 };
const G = {
    play: false, room: 0, hp: 100, maxHp: 100, ammo: 25, maxAmmo: 25,
    enemiesDefeated: false, lastShot: 0, dashCooldown: 0,
    inCutscene: false, iframe: 0, dmgMult: 1, spdMult: 1, floorMsg: null
};

const STORY = {
    init: ["VocÃª nÃ£o Ã© um herÃ³i.", "Nunca foi... as sombras o traiu.", "A torre Ã© o seu caminho para a vinganÃ§a.", "O topo Ã© a Ãºnica saÃ­da."],
    boss10: ["O GuardiÃ£o foi silenciado.", "Ele tambÃ©m jÃ¡ teve uma famÃ­lia.", "VocÃª sente o peso de cada vida?"],
    boss20: ["A Filha do Rei implora por misericÃ³rdia...", "Mas aqui, apenas a morte Ã© real."],
    boss30: ["Eles imploram em lÃ­nguas esquecidas.", "O Den of Shadow se alimenta da sua raiva."],
    boss40: ["O Arquiteto das Sombras caiu.", "Ele construiu esta torre para manter algo lÃ¡ fora...", "Ou para manter vocÃª aqui dentro?"],
    boss50: ["Metade da subida.", "NÃ£o hÃ¡ nada lÃ¡ atrÃ¡s para vocÃª."],
    boss60: ["O Carrasco das Almas nÃ£o tortura mais.", "Ele gritou exatamente como suas vÃ­timas."],
    boss70: ["A Sombra do Passado foi dissipada.", "VocÃª estÃ¡ matando suas prÃ³prias memÃ³rias para subir."],
    boss80: ["VocÃª estÃ¡ quase lÃ¡.", "Mas o que restarÃ¡ de vocÃª no topo?"],
    boss90: ["O PurgatÃ³rio Final.", "A escuridÃ£o aqui Ã© tÃ£o densa que vocÃª quase pode tocÃ¡-la.", "O Ãºltimo teste antes do Rei."],
    final: ["O REI DAS SOMBRAS CAIU.", "VocÃª recuperou seu trono.", "Mas agora, vocÃª Ã© a coisa mais sombria neste lugar."]
};

const FLOOR_TEXTS = {
    55: "VocÃª consegue ouvir os sussurros sob seus pÃ©s?",
    65: "Suas mÃ£os estÃ£o manchadas. A Ã¡gua nÃ£o limpa este sangue.",
    75: "O Rei estÃ¡ observando... ele sempre esteve.",
    85: "NinguÃ©m que subiu atÃ© aqui voltou sendo humano.",
    95: "O fim estÃ¡ prÃ³ximo. O abraÃ§o da sombra Ã© quente."
};

let currentStory = [], storyIdx = 0;
const keys = {};
let player = { x: 800, y: 800, r: 25, spd: 7.5, dash: 0 };
let enemies = [], projectiles = [], enemyProjectiles = [], drops = [];
let joyInput = { moveX: 0, moveY: 0, aimX: 0, aimY: 0 };

function setupJoystick(containerId, stickId, type) {
    const container = document.getElementById(containerId);
    const stick = document.getElementById(stickId);
    let touchId = null;
    const handleInput = (e) => {
        let touch = null;
        if (touchId === null) { touch = e.changedTouches[0]; touchId = touch.identifier; }
        else { for(let i=0; i<e.touches.length; i++) if(e.touches[i].identifier === touchId) touch = e.touches[i]; }
        if (!touch) return;
        const rect = container.getBoundingClientRect();
        const dx = touch.clientX - (rect.left + rect.width / 2);
        const dy = touch.clientY - (rect.top + rect.height / 2);
        const dist = Math.min(50, Math.hypot(dx, dy));
        const ang = Math.atan2(dy, dx);
        const mx = Math.cos(ang) * dist; const my = Math.sin(ang) * dist;
        stick.style.transform = `translate(${mx}px, ${my}px)`;
        if (type === 'move') { joyInput.moveX = mx / 50; joyInput.moveY = my / 50; }
        if (type === 'aim') { joyInput.aimX = mx / 50; joyInput.aimY = my / 50; }
    };
    container.addEventListener('touchstart', handleInput);
    container.addEventListener('touchmove', e => e.preventDefault());
    container.addEventListener('touchmove', handleInput);
    container.addEventListener('touchend', e => { 
        for(let i=0; i<e.changedTouches.length; i++) if(e.changedTouches[i].identifier === touchId){
            touchId = null; stick.style.transform = `translate(0,0)`;
            if (type === 'move') { joyInput.moveX = 0; joyInput.moveY = 0; }
            if (type === 'aim') { joyInput.aimX = 0; joyInput.aimY = 0; }
        }
    });
}

function btnK(k, v) { if(v) keys[k] = true; else delete keys[k]; }

// InÃ­cio do Jogo chamando a cutscene 1
function initGameFlow() {
    initAudio();
    document.getElementById('start-screen').style.display = 'none';
    startCutscene('init');
}

function startGame() {
    G.play = true; G.inCutscene = false;
    document.getElementById('hud').style.display = 'block';
    if('ontouchstart' in window) {
        document.getElementById('mobile-controls').style.display = 'flex';
        setupJoystick('move-joy', 'move-stick', 'move');
        setupJoystick('aim-joy', 'aim-stick', 'aim');
    }
    initRoom();
}

function startCutscene(key) {
    G.play = false; G.inCutscene = true;
    storyIdx = 0;
    currentStory = STORY[key] || ["..."];
    document.getElementById('cutscene-screen').style.display = 'flex';
    document.getElementById('mobile-controls').style.display = 'none';
    advanceCutscene();
}

function advanceCutscene() {
    if (storyIdx < currentStory.length) {
        document.getElementById('cutscene-text').innerText = currentStory[storyIdx++];
    } else {
        document.getElementById('cutscene-screen').style.display = 'none';
        if (G.room > 0 && G.room % 10 === 0 && enemies.length === 0) openUpgradeMenu();
        else startGame();
    }
}

function openUpgradeMenu() {
    G.play = false;
    const list = document.getElementById('upgrade-list');
    list.innerHTML = '';
    document.getElementById('upgrade-screen').style.display = 'flex';
    const opts = [
        {n:"CARNE MORTA", d:"Vida mÃ¡xima +50. A dor torna-se seu escudo.", f:()=>G.maxHp+=50},
        {n:"Ã“DIO PURO", d:"Dano +40%. Sua raiva Ã© uma lÃ¢mina afiada.", f:()=>G.dmgMult+=0.4},
        {n:"DESESPERO", d:"Velocidade +20%. O medo dÃ¡ asas aos seus pÃ©s.", f:()=>G.spdMult+=0.2}
    ];
    opts.forEach(o => {
        const card = document.createElement('div');
        card.className = 'upgrade-card';
        card.innerHTML = `<h3>${o.n}</h3><p>${o.d}</p>`;
        card.onclick = () => { o.f(); G.hp=G.maxHp; G.ammo=G.maxAmmo; document.getElementById('upgrade-screen').style.display='none'; startGame(); };
        list.appendChild(card);
    });
}

function initRoom() {
    enemies = []; projectiles = []; enemyProjectiles = []; drops = [];
    G.enemiesDefeated = false; G.floorMsg = null;
    player.x = ROOM.w/2; player.y = ROOM.h - 150;

    if (G.room > 50 && G.room % 5 === 0 && G.room % 10 !== 0) {
        G.floorMsg = { text: FLOOR_TEXTS[G.room] || "As vozes...", x: ROOM.w/2, y: ROOM.h/2, active: false };
    }

    if (G.room > 0 && G.room % 10 === 0) {
        enemies.push({ x: ROOM.w/2, y: 300, hp: 800+(G.room*75), r: 100, spd: 3, isBoss: true, lastShot: 0 });
    } else if (G.room > 0) {
        let n = 4 + Math.floor(G.room * 0.4);
        for(let i=0; i<n; i++) {
            enemies.push({ 
                x: Math.random()*(ROOM.w-200)+100, y: Math.random()*400+100, 
                hp: 60+G.room*15, r: 30, spd: 1.5 + Math.random(), isShooter: Math.random()>0.7, lastShot: 0
            });
        }
    } else G.enemiesDefeated = true; // Sala 0 inicial
}

function update() {
    if (!G.play || G.inCutscene) return;
    if (G.iframe > 0) G.iframe--;

    let mx = joyInput.moveX; let my = joyInput.moveY;
    if (keys['w']) my = -1; if (keys['s']) my = 1; if (keys['a']) mx = -1; if (keys['d']) mx = 1;
    if (keys['shift'] && G.dashCooldown <= 0) { player.dash = 14; G.dashCooldown = 60; }
    if (G.dashCooldown > 0) G.dashCooldown--;
    let s = (player.dash > 0 ? player.spd * 3 : player.spd) * G.spdMult;
    if (player.dash > 0) player.dash--;

    player.x = Math.max(ROOM.wall+player.r, Math.min(ROOM.w-ROOM.wall-player.r, player.x + mx*s));
    player.y = Math.max(ROOM.wall+player.r, Math.min(ROOM.h-ROOM.wall-player.r, player.y + my*s));

    if (G.floorMsg && !G.floorMsg.active) {
        if (Math.hypot(player.x - G.floorMsg.x, player.y - G.floorMsg.y) < 150) {
            G.floorMsg.active = true; playScream(false, true);
        }
    }

    let ax = joyInput.aimX; let ay = joyInput.aimY;
    if (keys['arrowup']||keys['up']) ay = -1; if (keys['arrowdown']||keys['down']) ay = 1; 
    if (keys['arrowleft']||keys['left']) ax = -1; if (keys['arrowright']||keys['right']) ax = 1;
    
    if ((Math.abs(ax) > 0.4 || Math.abs(ay) > 0.4) && G.ammo > 0 && Date.now() - G.lastShot > 180) {
        projectiles.push({ x: player.x, y: player.y, vx: ax*18, vy: ay*18, dmg: 50*G.dmgMult });
        G.ammo--; G.lastShot = Date.now();
    } else if (mx === 0 && my === 0 && Date.now() - G.lastShot > 1500) {
        if (G.ammo < G.maxAmmo) G.ammo++;
    }

    enemies.forEach((en) => {
        let ang = Math.atan2(player.y - en.y, player.x - en.x);
        en.x += Math.cos(ang) * en.spd; en.y += Math.sin(ang) * en.spd;
        if (Math.hypot(player.x-en.x, player.y-en.y) < player.r+en.r && G.iframe <= 0 && player.dash <= 0) {
            G.hp -= 20; G.iframe = 60;
        }
        if ((en.isShooter || en.isBoss) && Date.now() - en.lastShot > (en.isBoss ? 1200 : 2500)) {
            enemyProjectiles.push({ x: en.x, y: en.y, vx: Math.cos(ang)*8, vy: Math.sin(ang)*8 });
            en.lastShot = Date.now();
        }
    });

    projectiles.forEach((p, pi) => {
        p.x += p.vx; p.y += p.vy;
        enemies.forEach((en, ei) => {
            if (Math.hypot(p.x-en.x, p.y-en.y) < en.r) {
                en.hp -= p.dmg; projectiles.splice(pi, 1);
                if (en.hp <= 0) {
                    playScream(en.isBoss, false);
                    if (Math.random()<0.3 || en.isBoss) drops.push({x: en.x, y: en.y});
                    enemies.splice(ei, 1);
                    if (enemies.length === 0) G.enemiesDefeated = true;
                }
            }
        });
    });

    enemyProjectiles.forEach((ep, epi) => {
        ep.x += ep.vx; ep.y += ep.vy;
        if (Math.hypot(player.x-ep.x, player.y-ep.y) < player.r && G.iframe <= 0) {
            G.hp -= 15; G.iframe = 60; enemyProjectiles.splice(epi, 1);
        }
    });

    drops.forEach((d, di) => { if (Math.hypot(player.x-d.x, player.y-d.y) < 50) { G.hp = Math.min(G.maxHp, G.hp+20); drops.splice(di, 1); } });

    if (G.enemiesDefeated && player.y < 120 && Math.abs(player.x - ROOM.w/2) < 120) {
        if (G.room > 0 && G.room % 10 === 0) {
            startCutscene('boss' + G.room);
        }
        G.room++;
        if (G.room === 101) startCutscene('final');
        else initRoom();
    }
    if (G.hp <= 0) location.reload();
}

function draw() {
    canvas.width = window.innerWidth; canvas.height = window.innerHeight;
    if (G.play) update();
    ctx.fillStyle = "#000"; ctx.fillRect(0,0,canvas.width, canvas.height);
    if (!G.play && !G.inCutscene) { requestAnimationFrame(draw); return; }
    
    ctx.save();
    let sc = Math.min(canvas.width/ROOM.w, canvas.height/ROOM.h) * 0.95;
    ctx.translate(canvas.width/2, canvas.height/2); ctx.scale(sc, sc); ctx.translate(-ROOM.w/2, -ROOM.h/2);
    ctx.fillStyle = "#050000"; ctx.fillRect(0,0,ROOM.w, ROOM.h);

    if (G.floorMsg) {
        ctx.fillStyle = G.floorMsg.active ? "#f00" : "rgba(100,0,0,0.3)";
        ctx.font = "italic 32px 'Special Elite', serif";
        ctx.textAlign = "center";
        ctx.fillText(G.floorMsg.text, G.floorMsg.x, G.floorMsg.y);
    }

    ctx.fillStyle = "#100"; ctx.fillRect(0,0,ROOM.w, ROOM.wall); ctx.fillRect(0, ROOM.h-80, ROOM.w, 80);
    if(G.enemiesDefeated) { ctx.fillStyle = "#600"; ctx.fillRect(ROOM.w/2-120, 0, 240, ROOM.wall); }
    if (G.iframe % 4 < 2) { ctx.fillStyle = "#fff"; ctx.beginPath(); ctx.arc(player.x, player.y, player.r, 0, Math.PI*2); ctx.fill(); }
    enemies.forEach(en => { ctx.fillStyle = en.isBoss ? "#600" : "#300"; ctx.beginPath(); ctx.arc(en.x, en.y, en.r, 0, Math.PI*2); ctx.fill(); });
    projectiles.forEach(p => { ctx.fillStyle = "#fff"; ctx.beginPath(); ctx.arc(p.x, p.y, 5, 0, Math.PI*2); ctx.fill(); });
    enemyProjectiles.forEach(ep => { ctx.fillStyle = "red"; ctx.beginPath(); ctx.arc(ep.x, ep.y, 7, 0, Math.PI*2); ctx.fill(); });
    drops.forEach(d => { ctx.fillStyle = "red"; ctx.beginPath(); ctx.arc(d.x, d.y, 12, 0, Math.PI*2); ctx.fill(); });
    ctx.restore();

    document.getElementById('hp-fill').style.width = (G.hp/G.maxHp*100) + "%";
    document.getElementById('ammo-fill').style.width = (G.ammo/G.maxAmmo*100) + "%";
    document.getElementById('room-txt').innerText = G.room;
    requestAnimationFrame(draw);
}
draw();
window.addEventListener('keydown', e => btnK(e.key.toLowerCase(), 1));
window.addEventListener('keyup', e => delete keys[e.key.toLowerCase()]);
</script>
</body>
</html>